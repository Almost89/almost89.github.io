---
import Link from "./Link.astro"
const { post } = Astro.props
---
<div class="@container">
  <div class="mx-auto max-w-2xl overflow-hidden rounded-xl border border-almostblack transition-all hover:shadow-lg hover:-translate-y-3">
    <div class="@xl:flex h-full">
      <div class="@xl:shrink-0">
        <img class="h-40 w-full object-cover @xl:h-full @xl:w-40" src={post.frontmatter.thumbnail ? post.frontmatter.thumbnail : "https://http.cat/404"} />
      </div>
      <div class="p-6">
        <h1 class="text-sm font-semibold text-almostblue uppercase tracking-wide">{post.frontmatter.title}</h1>
        <p class="@ mt-1 block leading-tight font-medium text-lg text-almostorange">{post.frontmatter.description} </p>
        <p class="mt-2 text-almostblack">{post.frontmatter.date}</p>
        <br/>
        <Link href={post.url}>Read more</Link>.
      </div>
    </div>
  </div>
</div>