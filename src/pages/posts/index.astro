---
import BaseLayout from "../../layouts/BaseLayout.astro"
import Link from "../../components/Link.astro"
import Hr from "../../components/Hr.astro"

const posts = await Astro.glob("./*.md")
---
<BaseLayout title="Blog posts">
  <h1 class="text-4xl font-black text-almostgreen">Blog posts:</h1>
  <Hr />
  <div class="space-y-6">
    {posts.map((post) => (
      <div class="">
        <h1 class="text-2xl font-black text-almostblue">{post.frontmatter.title}</h1>
        <p class="font-bold text-sm text-almostorange">{post.frontmatter.description} </p>
        <p class="text-xs font-semibold text-almostblack">{post.frontmatter.date}</p>
        <br/>
        <Link href={post.url}>Read more</Link>.
      </div>
    ))}
  </div>
</BaseLayout>