---
import BaseLayout from "./BaseLayout.astro"

const {frontmatter} = Astro.props;
---
<BaseLayout title={frontmatter.title}>
  <h1 class="text-2xl font-black text-almostblue">{frontmatter.title}</h1>
  <p class="font-bold text-sm text-almostorange">{frontmatter.description}</p>
  <p class="text-xs font-semibold text-almostblack">{frontmatter.date}</p>
  <br/>
  <hr/>
  <br/>
  <article class="prose prose-headings:text-almostblack prose-img:rounded prose-img:transition-all hover:prose-img:drop-shadow-xl hover:prose-img:-translate-y-3">
    <slot />
  </article>
</BaseLayout>